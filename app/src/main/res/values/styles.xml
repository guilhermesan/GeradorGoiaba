<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bittersweet</item>
        <!--<item name="colorPrimaryDark">@color/lighter_gray</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/bittersweet</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="dropDownListViewStyle">@style/SpinnerDropdown</item>
        <item name="android:actionBarItemBackground">@drawable/background_actionbar_item</item>
        <item name="actionBarItemBackground">@drawable/background_actionbar_item</item>
    </style>

    <style name="AppThemeNoBar" parent="AppTheme">
        <item name="android:windowActionBar" tools:ignore="NewApi">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SpinnerDropdown" parent="android:style/Widget.ListView.DropDown">
        <item name="android:background">@color/bittersweet</item>
        <item name="android:divider">@color/white</item>
        <item name="android:listSelector">@color/green</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="myapp.Widget.DropDownItem.Spinner" parent="android:style/Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/myapp.TextAppearance.Widget.DropDownItem</item>
    </style>

    <style name="myapp.TextAppearance.Widget.DropDownItem" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
